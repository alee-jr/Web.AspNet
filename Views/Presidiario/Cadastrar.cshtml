@model Presidiario
@{
    ViewData["Title"] = "Cadastrar";
}

<h2>Cadastrar</h2>

<form asp-action="cadastrar">
    <div class="form-group">
        <label asp-for="Nome"></label>
        <input asp-for="Nome" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="DataEntrada"></label>
        <input asp-for="DataEntrada" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="DataSaida"></label>
        <input asp-for="DataSaida" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="NivelEscolaridade"></label>
        <select asp-for="NivelEscolaridade" asp-items="@Html.GetEnumSelectList<NivelEscolaridade>()" class="form-control">

        </select>
    </div>
    <div class="form-group">
        <label asp-for="Cela"></label>
        <select asp-for="CelaId" asp-items="@ViewBag.celas" class="form-control">
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Cadastrar</button>
</form>
